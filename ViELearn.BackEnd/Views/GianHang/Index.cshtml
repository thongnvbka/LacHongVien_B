@using System.Data

@{
    ViewBag.Title = "Danh sách gian hàng";
    Layout = "~/Views/Shared/_Layoutv2.cshtml";
}
@section titlePage{
    <h3 class="page-title">@ViewBag.Title</h3>
}
@section stylePageLever{
    <link href="/UITheme/assets/global/plugins/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
    <link href="/UITheme/assets/global/plugins/select2/css/select2-bootstrap.min.css" rel="stylesheet" type="text/css" />
}
@section scriptMainPageLevel{
    <script src="/UITheme/assets/global/scripts/datatable.js" type="text/javascript"></script>
    <script src="/UITheme/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
    <script src="/UITheme/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
    <script src="/UITheme/assets/pages/scripts/table-datatables-editable.min.js" type="text/javascript"></script>
    <script src="/UITheme/assets/global/plugins/select2/js/select2.full.min.js" type="text/javascript"></script>
}
@section scriptConfigPageLevel{ }
@section actionMenu{
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
            <li> <i class="fa fa-plus icon-home"></i> <i class="fa fa-angle-right"></i> </li>
            <li> <span>@ViewBag.Title</span></li>
        </ul>
        <div class="page-toolbar">
            <div class="btn-group">
                <a href="@Url.Action("Create", "GianHang")"><span class="btn btn-fit-height btn-primary"><i class="fa fa-plus"></i> Thêm gian hàng</span></a>
            </div>
            @*<div class="btn-group pull-right">
                <button type="button" class="btn btn-fit-height btn-danger dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-delay="1000" data-close-others="true"> Công cụ <i class="fa fa-angle-down"></i> </button>
                <ul class="dropdown-menu pull-right" role="menu">
                    <li> <a href="@Url.Action("ImportExcel", "DanhSachHocSinh")?type=2"> <i class="fa fa-file-excel-o"></i> Nhập từ Excel </a> </li>
                    <li> <a href="javascript:void(0)" onclick="exportExcel();"> <i class="fa fa-download"></i> Xuất ra Excel </a> </li>
                    <!-- <li class="divider"> </li> -->
                </ul>
            </div>*@
        </div>
    </div>
}
@if (ViewBag.DsGianHang == null || ViewBag.DsGianHang.Rows.Count < 1)
{
    @Html.Raw("Chưa có gian hàng nào!");
    return;
}

<div class="table-scrollable">
    <table class="table table-striped table-hover table-bordered datatable" id="dsGianHang">
        <thead>
            <tr>
                <th class="text-center" style="width: 35px;">#</th>
                <th>Tên gian hàng</th>
                <th class="text-center" style="width: 120px;">Đầu SP</th>
                <th class="text-center" style="width: 120px;">Tổng SP</th>
                <th class="text-center" style="width: 120px;">Đã bán (ngàn đ)</th>
                <th class="text-center" style="width: 120px;">Tồn (ngàn đ)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow dr in ViewBag.DsGianHang.Rows)
            {
                <tr data-id="@dr["idGianHang"]">
                    <td class="text-center"><a href="@Url.Action("Edit", "GianHang", new { id = dr["idGianHang"] })">@(ViewBag.DsGianHang.Rows.IndexOf(dr) + 1)</a> </td>
                    <td>
                        <a href="@Url.Action("Edit", "GianHang", new { id = dr["idGianHang"] })">@dr["tenGianHang"]</a>
                        <small class="pull-right">@dr["diaChi"], @dr["tenPhuongXa"], @dr["tenQuanHuyen"], @dr["tenTinhTp"]</small>
                    </td>
                    <td class="text-center"><a href="@Url.Action("Edit", "GianHang", new { id = dr["idGianHang"] })">@*@dr["tongDauMucSanPham"]*@0</a></td>
                    <td class="text-center"><a href="@Url.Action("Edit", "GianHang", new { id = dr["idGianHang"] })">@*@dr["tongSoSanPham"]*@0</a></td>
                    <td class="text-center"><a href="@Url.Action("Edit", "GianHang", new { id = dr["idGianHang"] })">@*@dr["soTienDaBan"]*@0</a></td>
                    <td class="text-center"><a href="@Url.Action("Edit", "GianHang", new { id = dr["idGianHang"] })">@*@dr["soTienUocTinhConLai"]*@0</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>