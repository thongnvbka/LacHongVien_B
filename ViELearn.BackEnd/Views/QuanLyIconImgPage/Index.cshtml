            $("#txt_main_content").val(main_content);
            $("#txt_content").val(alter_content);
            $("#txt_main_url").val(url);
            $("#txt_main_weekdays").val(weekdays);
            $("#txt_main_hour_on").val(hour_on);
            $("#txt_main_hour_off").val(hour_off);

            $('table').find('tr').each(function () {
                $(this).css('background-color', 'white');
            });
            $(itm).parent().parent().css('background-color', 'yellow');
        }

        function submit(itm) {
            var id = $(itm).data('itmid');
            //console.log('id: ' + id);
            bootbox.confirm({
                message: "Có chắc chắn muốn " + (id == 0 ? "thêm mới" : "sửa") + " không?",
                buttons: {
                    cancel: {
                        label: 'Không',
                        className: 'btn-info'
                    },
                    confirm: {
                        label: 'Có',
                        className: 'btn-danger'
                    }
                },
                callback: function (result) {
                    if (result) {
                        $.ajax({
                            data: {
                                page_kind: $('#cbo_main_page').val(),
                                col_kind: $('#cbo_main_col').val(),
                                order: $('#txt_main_order').val(),
                                type: $('#cbo_main_type').val(),
                                title: $('#txt_main_title').val(),
                                main_content: $('#txt_main_content').val(),
                                alter_content: $('#txt_content').val(),
                                url: $('#txt_main_url').val(),
                                weekdays: $('#txt_main_weekdays').val(),
                                hour_on: $('#txt_main_hour_on').val(),
                                hour_off: $('#txt_main_hour_off').val()
                            },
                            type: 'POST',
                            datatype: 'json',
                            url: '/QuanLyIconImgPage/Save?id=' + id,
                            success: function (responsive) {
                                if (responsive.status) {
                                    window.location.reload();
                                } else {
                                    bootbox.alert(responsive.message);
                                }
                            },
                            error: function (responsive) {
                                bootbox.alert("Có lỗi xảy ra!");
                            }
                        });
                    }
                }
            });
        }
        function submit_del(id) {
            alert(id);

            bootbox.confirm({
                message: "Bạn có chắc chắn muốn xóa không?",
                buttons: {
                    cancel: {
                        label: 'Không',
                        className: 'btn-info'
                    },
                    confirm: {
                        label: 'Có',
                        className: 'btn-danger'
                    }
                },
