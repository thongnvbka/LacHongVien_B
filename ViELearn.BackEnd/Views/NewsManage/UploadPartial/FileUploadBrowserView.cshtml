<div class="row">
    <div class="col-md-2">     
        @foreach (var tmpDir in ViewBag.lstDateTimeDir)
        {
            <a href="#" onclick="FileListShow('@tmpDir')">
                <label>@tmpDir</label>
            </a>
            <br/>
        }
    </div>
    <div class="col-md-10" id="FileListShow">
        @Html.Action("GetListFileAttachment", "NewsManage", new { inDir = ViewBag.lastDir })
    </div>
</div>


<script type="text/javascript">
    function FileListShow(inDir) {
        var url = '../NewsManage/GetListFileAttachment?inDir=' + inDir;
        $('#FileListShow').load(url);
    }

    function ReturnImage(itm)
    {
        var urlFile = $(itm).attr("data-url");
        var tmp = $('div[id^="list_"]')
        //This takes the data value and id of the editor and sends the data(i.e.,image url) back to the caller page
        window.opener.CKEDITOR.tools.callFunction(1, urlFile);
        //window.opener.updateValue("cke_125_textInput", urlImage);
        window.close();
    }
</script>