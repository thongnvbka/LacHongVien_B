            <div class="page-content" style="min-height: 930px;">
                @RenderSection("titlePage", required: false)
                <div class="page-bar">                    
                    <div id="ajaxModalProject" class="modal fade" tabindex="-1" data-backdrop="static" data-keyboard="false" data-attention-animation="false">
                    </div>
                    @RenderSection("actionMenu", required: false)
                </div>
                <div class="row">
                    @RenderBody()
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
    <div class="page-footer">
