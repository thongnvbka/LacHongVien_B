                var id = $(this).data('id');
                values += id + ": " + index + ';';

            });
            //console.log(values);
            //return;

            $.ajax({
                data: {
                    values: values
                },
                type: 'POST',
                datatype: 'json',
                url: '/DanhMucChung/SaveSort',
                success: function () {
                    bootbox.alert("Cập nhật thành công!");
                },
                error: function (responsive) {
                    bootbox.alert("Có lỗi xảy ra!");
                }
            });

        };
