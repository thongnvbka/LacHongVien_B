@if (ViewBag.DsLoaiDanhMuc == null || ViewBag.DsLoaiDanhMuc.Rows.Count < 1)
{
    @Html.Raw("Chưa có danh mục nào!");
    return;
}
<table class="table table-striped table-hover table-bordered datatable" id="dsDonVi">
    <thead>
        <tr>
            <th class="text-center" style="width: 35px;">#</th>
            <th class="text-center">Tên, mô tả</th>
            <th class="text-center" style="width: 135px;">Số danh mục</th>
            @*<th class="text-center" style="width: 35px;">
                <a href="javascript:void(0)" onclick="deleteAll();"> <i class="fa fa-trash font-red" title="Xóa toàn bộ"></i> </a>
            </th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (DataRow item in ViewBag.DsLoaiDanhMuc.Rows)
        {
            <tr data-id="@item["id"]">
                <td class="text-center"><a href="/TagTypesManager/Edit?id=@item["id"]">@(ViewBag.DsLoaiDanhMuc.Rows.IndexOf(item) + 1)</a></td>
                <td class="text-left"><a href="/TagTypesManager/Edit?id=@item["id"]">@item["name"]</a></td>
                <td class="text-center">@item["used"]</td>
                @*<td class="text-center">
                    <a href="#" class="btn-xoa" data-id="@item["id"]" title="Xóa" onclick="delete_dm(this);"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
                </td>*@
            </tr>
        }
    </tbody>
</table>

