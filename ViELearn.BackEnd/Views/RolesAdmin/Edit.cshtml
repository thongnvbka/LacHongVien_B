@model ViELearn.BackEnd.Models.RoleViewModel

<div class="modal-header">
    <h4>Chỉnh sửa nhóm người dùng</h4>
</div>
<div class="modal-body" style="overflow:unset;">
    @using (Ajax.BeginForm("Edit", "RolesAdmin", new AjaxOptions { HttpMethod = "POST", OnSuccess = "EditRoleAlert" }, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

          
                <div class="form-actions">
                    <div class="row">
                        <div class="col" style="text-align:center">
                            <button type="submit" class="btn blue">Lưu</button>
                        </div>
                    </div>
                </div>
            
        </div>
    }
</div>
<div class="modal-footer">
    <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
</div>

<script type="text/javascript">
    function EditRoleAlert(data) {
        if (data == "Success") {
            tableRoleControl.bootstrapTable('refresh');
            $('#ajaxModalProject').modal('toggle');
            bootbox.alert("Lưu thay đổi thành công");
        }
        else
            bootbox.alert(data);
    }
</script>   