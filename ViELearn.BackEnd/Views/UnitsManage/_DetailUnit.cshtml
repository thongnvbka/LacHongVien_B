@using ViELearn.Models.ProjectModels;
@model Units

@{
    Layout = null;
}

<div id="divDetailUnit">
    @using (Ajax.BeginForm("SaveUnit", "UnitsManage", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "divDetailUnit", OnSuccess = "CreateOrSaveAlert('Lưu thông tin thành công!')" }, new { @class = "form-horizontal" }))
    {
        <div class="modal-content">
            <div class="modal-header">
                <h4>@(Model.Id>0? "Thông tin Đơn vị" : "Tạo mới đơn vị")</h4>
            </div>
            <div class="modal-body">
                <div class="col sm-12">
                    <div class="form-body">
                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.CreatedAt)
                        @Html.HiddenFor(m => m.CreatedBy)
                        @Html.HiddenFor(m => m.MainPageId)
                        @Html.HiddenFor(m => m.UnitType)                        

                        <div class="form-group">
                            <label class="col-md-4 control-label">Tên đơn Vị</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="Name" value="@Model.Name">
                            </div>
                        </div>                        

                        <div class="form-group">
                            <label class="col-md-4 control-label">Mã đơn Vị</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="Code" value="@Model.Code">
                            </div>
                        </div>                        

                        <div class="form-group">
                            <label class="col-md-4 control-label">Đường dẫn truy cập</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="Url" value="@Model.Url">
                            </div>
                        </div>                        

                        <div class="form-group">
                            <label class="col-md-4 control-label">Đường dẫn media</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="MediaUrl" value="@Model.MediaUrl">
                            </div>
                        </div>                        

                        <div class="form-group">
                            <label class="col-md-4 control-label">Đường dẫn phụ</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="SecondUrl" value="@Model.SecondUrl">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label">Đường dẫn logo đơn vị (Phần quản trị)</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" name="LogoUrl" value="@Model.LogoUrl">
                            </div>
                        </div>      

                        <div class="form-group">
                            <label class="col-md-4 control-label">Trạng thái</label>
                            <div class="col-md-6">                                
                                    <input type="checkbox" class="make-switch" data-size="mini" id="ckSetActive" data-on-text="Kích hoạt" data-off-text="Ngừng Hoạt Động" name="ChkActive" value="true" @(Model.Active == true?"checked":"")/>                                
                            </div>
                        </div>                        

                        <div class="form-actions">
                            <div class="row" style="text-align:center">                                
                                <button type="submit" class="btn blue">@(Model.Id != 0?"Lưu thay đổi":"Thêm mới")</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
            </div>
        </div>
}
</div>

<script type="text/javascript">
    $().bootstrapSwitch && $(".make-switch").bootstrapSwitch()
</script>
