    <link href="~/UITheme/assets/pages/css/login.min.css" rel="stylesheet" type="text/css" />
</head>

<body class="login">
    <style>
        @@media (max-width: 440px) {
            .logo img {
                width: 80px
            }
        }

        .login .logo {
            width: 400px;
            text-align: left;
            padding-left: 0;
        }

            .login .logo a {
                color: #fff;
                font-weight: bold;
                text-transform: uppercase;
                font-size: 27px;
            }

        .login .content {
            margin: 2px auto 10px;
        }
    </style><style>
    @@media (max-width: 440px) {
        .logo img {
            width: 80px
        }
    }

