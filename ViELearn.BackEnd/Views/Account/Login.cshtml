    <script src="~/UITheme/assets/global/plugins/jquery-validation/js/additional-methods.min.js" type="text/javascript"></script>
    <script src="~/UITheme/assets/global/plugins/select2/js/select2.full.min.js" type="text/javascript"></script>
    <script src="~/UITheme/assets/pages/scripts/login.min.js" type="text/javascript"></script>
</body>
</html>