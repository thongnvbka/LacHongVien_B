@section scriptConfigPageLevel{
    <script type="text/javascript">
        function submit_del(id, itm) {
            bootbox.confirm({
                message: "Bạn muốn xóa danh mục đi không?",
                buttons: {
                    cancel: {
                        label: 'Không',
                        className: 'btn-info'
                    },
                    confirm: {
                        label: 'Có',
                        className: 'btn-danger'
                    }
                },
                callback: function (result) {
                    if (result) {
                        $.ajax({
                            url: '/DanhMucChung/Delete?id=' + id,
                            success: function (responsive) {
                                if (responsive) {
                                    $(itm).parent().parent().remove();
                                    $('#stt tbody tr:last-child').remove();
                                } else {
                                    bootbox.alert(responsive.message);
                                }
                            },
                            error: function (responsive) {
                                bootbox.alert("Có lỗi xảy ra!");
                            }
                        });
                    }
                }
            });
        }
        function ChangeStatus(item, id) {

            var checked = $(item).prop("checked");
            var status = checked ? 1 : 0;
            //console.log(status);
            bootbox.confirm({
                message: "Bạn muốn thay đổi trang thái đi không?",
                buttons: {
                    cancel: {
                        label: 'Không',
                        className: 'btn-info'
                    },
                    confirm: {
                        label: 'Có',
                        className: 'btn-danger'
                    }
                },
                callback: function (result) {
                    if (result) {
                        $.ajax({
                            data: { _status: status },
                            url: '/DanhMucChung/ChangeStatus?id=' + id,
                            success: function (responsive) {
                                if (responsive) {

                                } else {
                                    bootbox.alert(responsive.message);
                                }
                            },
                            error: function (responsive) {
                                bootbox.alert("Có lỗi xảy ra!");
                            }
                        });
                    }
                }
            });
        }
        function ShowMenu(item, id) {

            var checked = $(item).prop("checked");
            var status = checked ? 1 : 0;
            console.log(status);
            bootbox.confirm({
                message: "Bạn muốn thay đổi trang thái đi không?",
                buttons: {
                    cancel: {
                        label: 'Không',
                        className: 'btn-info'
                    },
                    confirm: {
                        label: 'Có',
                        className: 'btn-danger'
                    }
                },
                callback: function (result) {
                    if (result) {
                        $.ajax({
                            data: { t: status },
                            url: '/DanhMucChung/ShowMenu?id=' + id,
                            success: function (responsive) {
                                if (responsive) {

                                } else {
                                    bootbox.alert(responsive.message);
                                }
                            },
                            error: function (responsive) {
                                bootbox.alert("Có lỗi xảy ra!");
                            }
                        });
                    }
                }
            });
        }
        function sortable() {
            $("#sortable").sortable();
        };

        function saveSort() {
            var values = '';
            $("#sortable tr").each(function (index) {
                var id = $(this).data('id');
                values += id + ": " + index + ';';

            });
            //console.log(values);
            //alert(values);
            $.ajax({
                data: {
                    values: values
                },
                type: 'POST',
                datatype: 'json',
                url: '/DanhMucChung/SaveSort',
                success: function () {
                    bootbox.alert("Cập nhật thành công!");
                },
                error: function (responsive) {
                    bootbox.alert("Có lỗi xảy ra!");
                }
            });

        };
        sortable();
    var treeModel = @Html.Raw(Json.Encode(Model));
        $(".tree").jstree({
        plugins: ["contextmenu", "dnd", "search","state", "types", "wholerow"],
        core: {
            data: treeModel
        },
        checkbox: {
            three_state : true, // to avoid that fact that checking a node also check others
            whole_node : false,  // to avoid checking the box just clicking the node
            tie_selection : false // for checking without selecting and selecting without checking
        }
    });

    </script>
}
